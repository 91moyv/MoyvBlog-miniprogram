page{
  background-color: #f6f6f6;
}
.card {
  background-color: white;
  margin: 32rpx;
  display: block;
  padding-top: 18rpx;
  padding-bottom: 18rpx;
  box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
  border-radius: 10rpx;
  box-sizing: border-box;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  display: block;
  text-align: center;
}

.input {
  width: 656rpx;
  margin: 18rpx;
  display: block;
  padding: 32rpx;
  height: 200rpx;
  font-size: 32rpx;
}
.btn{
  display: block;
  margin: 32rpx;
  color: white;
}


.item{
  margin: 24rpx 0rpx;
  background-color: white;
  padding: 32rpx;
  box-shadow: 0 2rpx 1rpx rgba(0, 0, 0, 0.15);
}
.userinfo{
  display: flex;
  justify-content: start;
  align-content: center;
  align-items: center;
}
.avatar{
  width: 80rpx;
  border-radius: 100rpx;
}
.username{
  margin-left: 18rpx;
  font-weight: bold;
  font-size: 32rpx;
  display: block;
}
.time{
  font-size: 24rpx;
  margin-left: 18rpx;
  display: block;
}
.content{
  display: block;
  margin-top: 32rpx;
  margin-left: 98rpx;
  font-size: 32rpx;
  margin-bottom:18rpx; 
}
.baseline{
  font-size:24rpx;
  display:block;
  text-align:center;
  color: #707070;
  padding-bottom: 32rpx;
}
